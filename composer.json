{
    "name": "alisonbnt/hikaru-container",
    "description": "A simple and PSR-11 focused dependency injection container",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Alison Bento",
            "email": "alisonbnt@gmail.com"
        }
    ],
    "require": {
        "dg/composer-cleaner": "^1.1",
        "psr/container": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "AlisonBnt\\Hikaru\\": "src/"
        }
    },
    "scripts": {
        "test": "phpunit --bootstrap='vendor/autoload.php' --configuration='phpunit.xml' --include-path='tests' --coverage-html report"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.2",
        "phpunit/php-code-coverage": "^5.2"
    }
}
